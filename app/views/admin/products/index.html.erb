<div>
  <div class="product">
    <%= link_to("新增商品", new_admin_product_path, class: "btn btn-default pull-right") %>
  </div>
  <table class="table table-boldered">
  <thead>
    <tr>
    <td>#</td>
    <td>产品名</td>
    <td>叙述</td>
    <td>库存</td>
    <td>价格</td>
    <td>选项</td>
    <td>创建日期</td>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
  <tr>
    <td>#</td>
    <td>
      <%= link_to(product.title, admin_product_path(product)) %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_product_path(product)) %>
      <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure"}) %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
